<UserControl x:Class="ShaitanEt.MainControls.ProductControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShaitanEt.MainControls"
             mc:Ignorable="d" 
             d:DesignHeight="280" d:DesignWidth="280">
    <Grid Height="250" Width="250" Margin="15,10">
        <Border BorderBrush="Black" BorderThickness="3">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <Image Width="100" Height="100" HorizontalAlignment="Left" x:Name="ImagePhoto"></Image>
                <StackPanel Orientation="Vertical">
                <TextBlock x:Name="NameProduct" Text="AAAAAAAAAA" FontSize="20" Height="30"></TextBlock>
                <TextBlock x:Name="CostProduct" Text="0000000" FontSize="20" Height="30"></TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
