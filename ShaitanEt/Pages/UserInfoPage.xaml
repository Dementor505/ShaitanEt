<Page x:Class="ShaitanEt.Pages.UserInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShaitanEt.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="UserInfoPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock TextAlignment="Center" FontSize="50" Text="ДОБРО ПОЖАЛОВАТЬ"></TextBlock>
            <TextBlock x:Name="UserName" TextAlignment="Center" FontSize="50" Text="------ ----------"></TextBlock>
            <TextBlock x:Name="Money" TextAlignment="Center" FontSize="50" Text="У вас на баллансе --- .р"></TextBlock>
            <Button x:Name="AddMoney" Width="100" Height="50" Content="ПОПОЛНИТЬ" Click="AddMoney_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
