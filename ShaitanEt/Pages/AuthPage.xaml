<Page x:Class="ShaitanEt.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShaitanEt.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1200"
      Title="AuthPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0">
            <TextBlock Width="300" Height="50" Text="ЛОГИН" FontSize="30" TextAlignment="Right"></TextBlock>
            <TextBlock Width="300" Height="50" Text="ПАРОЛЬ" FontSize="30" TextAlignment="Right"></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1">
            <TextBox x:Name="LoginTb" Height="30" Width="300" VerticalContentAlignment="Center" FontSize="20"></TextBox>
            <PasswordBox x:Name="PassordPb" Height="30" Width="300" VerticalContentAlignment="Center" FontSize="20" Margin="0,20,0,0"></PasswordBox>
        </StackPanel>
        <StackPanel Grid.ColumnSpan="2" VerticalAlignment="Center" Grid.Column="0" Margin="0,300,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BackBtn" Width="300" Height="70" Content="НАЗАД" Click="BackBtn_Click"></Button>
                <Button x:Name="NextBtn" Width="300" Height="70" Content="ДАЛЕЕ" Margin="30" Click="NextBtn_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
