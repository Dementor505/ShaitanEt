<Page x:Class="ShaitanEt.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShaitanEt.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1200"
      Title="ProfilePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1000"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Frame x:Name="SecondFrame" NavigationUIVisibility="Hidden"></Frame>
        </StackPanel>
        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
            <Button x:Name="ProfileBtn" Width="150" Height="50" Content="ПРОФИЛЬ" Click="ProfileBtn_Click"></Button>
            <Button x:Name="ProductBtn" Width="150" Height="50" Content="ТОВАРЫ" Margin="0,30,0,0" Click="ProductBtn_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
